{
    // "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "../..",
        "target": "es2018",
        "sourceMap": true,
        "module": "esnext",
        "jsx": "preserve",
        "lib": ["esnext"],
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "experimentalDecorators": true,

        "strict": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "composite": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "build", ".cache", "client-bundle", "dev-dist", "dist", "scripts"],
    "include": ["../lib"]
}
