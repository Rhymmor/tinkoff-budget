{
    // "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "../..",
        "target": "es2018",
        "sourceMap": true,
        "module": "esnext",
        "jsx": "preserve",
        "lib": ["esnext"],
        "moduleResolution": "node",

        "strict": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "composite": true,
        "include": ["../lib"]
    }
}
